{
  "version": 2,
  "builds": [
    {
      "src": "admin-nextjs/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "."
      }
    }
  ],
  "routes": [
    {
      "src": "/api/listen",
      "dest": "/api/listen.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "VERCEL_GIT_COMMIT_REF": "@vercel_git_commit_ref"
  },
  "scripts": {
    "build": "if [ \"$VERCEL_GIT_COMMIT_REF\" == \"feature/nextjs-admin-final\" ]; then cd admin-nextjs && npm run build; else exit 0; fi"
  }
}
